<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>


    <style name="TitleStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleStyleWithoutShadow">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>

    </style>


    <style name="AllText">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>


    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/MyPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyNegativeButtonStyle</item>
    </style>

    <style name="MyPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>